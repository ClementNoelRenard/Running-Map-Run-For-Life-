<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/gameUIContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/topControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#E6000000"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MISSION EN COURS"
                android:textColor="#AAAAAA"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABANDON"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#B3261E"
                app:cornerRadius="8dp"
                android:layout_marginEnd="12dp"
                android:minHeight="48dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@android:drawable/ic_media_pause"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:backgroundTint="#333333"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:cornerRadius="24dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomHud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E6000000"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_timer"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txtTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="4dp"/>
                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="4dp"/>
                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bag"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txtObjectives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/5"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="REPRENDRE LA PARTIE"
            android:textSize="24sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_media_play"
            app:iconSize="32dp"
            android:padding="24dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#00C853"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2121212"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/menuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZOMBIE RUN"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MORT !"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:text="DIFFICULTÃ‰"
                android:textColor="#AAAAAA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/radioGroupDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/radioEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facile (10 Zombies - Marche)"
                    android:textColor="#FFFFFF"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radioNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal (30 Zombies - Jogging)"
                    android:textColor="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/radioHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enfer (50 Zombies - Sprint)"
                    android:textColor="#FF0000"/>
            </RadioGroup>

            <TextView
                android:id="@+id/lblRadius"
                android:text="ZONE: 500m"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="200"
                android:valueTo="2000"
                android:value="500"
                android:stepSize="100"/>

            <TextView
                android:id="@+id/lblObjectives"
                android:text="OBJECTIFS: 5"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekObjectives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="3"
                android:valueTo="20"
                android:value="5"
                android:stepSize="1"/>

            <Button
                android:id="@+id/btnPlay"
                android:text="LANCER LA MISSION"
                android:backgroundTint="#FF0000"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnShare"
                android:text="PARTAGER RESULTAT"
                android:backgroundTint="#0000FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>