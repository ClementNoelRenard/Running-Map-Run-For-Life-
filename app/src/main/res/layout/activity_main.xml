<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/gameUIContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/topControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#E6000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 km/h"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNoise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SILENCIEUX"
                    android:textColor="#00FF00"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:src="@android:drawable/ic_media_pause"
                app:tint="#FFFFFF"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOP"
                android:backgroundTint="#B3261E"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomHud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E6000000"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="#FF0000"/>
                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="#FF0000"/>
                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="#FF0000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtObjectives"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/5"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAUSE"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_above="@id/btnResume"/>

        <Button
            android:id="@+id/btnResume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="REPRENDRE"
            android:backgroundTint="#4CAF50"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2121212"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/menuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZOMBIE RUN"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MORT !"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:text="DIFFICULTÉ (VITESSE ZOMBIES)"
                android:textColor="#AAAAAA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/radioGroupDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/radioEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lents (Marche)"
                    android:textColor="#FFFFFF"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radioNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moyens (Jogging)"
                    android:textColor="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/radioHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enragés (Sprint)"
                    android:textColor="#FF0000"/>
            </RadioGroup>

            <TextView
                android:id="@+id/lblRadius"
                android:text="ZONE: 500m"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="500"
                android:valueTo="5000"
                android:value="500"
                android:stepSize="500"/>

            <TextView
                android:id="@+id/lblObjectives"
                android:text="OBJECTIFS: 5"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekObjectives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="3"
                android:valueTo="20"
                android:value="5"
                android:stepSize="1"/>

            <Button
                android:id="@+id/btnPlay"
                android:text="SURVIVRE"
                android:backgroundTint="#FF0000"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnShare"
                android:text="PARTAGER LE SCORE"
                android:backgroundTint="#2196F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>